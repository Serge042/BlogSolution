@model BlogApp.Data.Entities.Role

@{
    ViewData["Title"] = "Роль: " + Model.Name;
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h3>Роль: @Model.Name</h3>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-12">
                        <h4>Информация о роли</h4>
                        <p><strong>Название роли:</strong> <span class="badge badge-warning">@Model.Name</span></p>
                        <p><strong>Описание:</strong> @(string.IsNullOrEmpty(Model.Description) ? "Описание отсутствует" : Model.Description)</p>
                        <p><strong>Количество пользователей с этой ролью:</strong> @(Model.UserRoles?.Count ?? 0)</p>
                    </div>
                </div>

                @if (Model.UserRoles != null && Model.UserRoles.Any())
                {
                    <div class="mt-4">
                        <h4>Пользователи с этой ролью</h4>
                        <div class="list-group">
                            @foreach (var userRole in Model.UserRoles.Take(10))
                            {
                                <a asp-controller="Users" asp-action="Details" asp-route-id="@userRole.UserId"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@userRole.User.Username</h6>
                                        <small>Зарегистрирован: @userRole.User.CreatedAt.ToString("dd.MM.yyyy")</small>
                                    </div>
                                    <p class="mb-1">Email: @userRole.User.Email</p>
                                </a>
                            }
                        </div>
                        @if (Model.UserRoles.Count > 10)
                        {
                            <div class="mt-3 text-center">
                                <a href="#" class="btn btn-outline-warning">Показать всех пользователей (@Model.UserRoles.Count)</a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        Нет пользователей с этой ролью.
                    </div>
                }
            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-secondary">Назад к списку ролей</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
            </div>
        </div>
    </div>
</div>
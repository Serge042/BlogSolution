@model BlogApp.Data.Entities.User

@{
    ViewData["Title"] = "Профиль пользователя: " + Model.Username;
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3>Профиль пользователя: @Model.Username</h3>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="fas fa-user-circle fa-5x text-primary"></i>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <h4>Основная информация</h4>
                        <p><strong>Имя пользователя:</strong> @Model.Username</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Дата регистрации:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>

                        <div class="mt-3">
                            <h5>Роли:</h5>
                            @if (Model.UserRoles != null && Model.UserRoles.Any())
                            {
                                foreach (var userRole in Model.UserRoles)
                                {
                                    <span class="badge badge-primary mr-1">@userRole.Role.Name</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Роли не назначены</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-info text-white">
                                <h5>Статистика</h5>
                            </div>
                            <div class="card-body">
                                <p><strong>Количество статей:</strong> @(Model.Posts?.Count ?? 0)</p>
                                <p><strong>Количество комментариев:</strong> @(Model.Comments?.Count ?? 0)</p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Posts != null && Model.Posts.Any())
                {
                    <div class="mt-4">
                        <h4>Последние статьи</h4>
                        <div class="list-group">
                            @foreach (var post in Model.Posts.Take(5))
                            {
                                <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@post.Title</h6>
                                        <small>@post.CreatedAt.ToString("dd.MM.yyyy")</small>
                                    </div>
                                    <p class="mb-1">@(post.Summary.Length > 100 ? post.Summary.Substring(0, 100) + "..." : post.Summary)</p>
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-secondary">Назад к списку пользователей</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактировать</a>
            </div>
        </div>
    </div>
</div>
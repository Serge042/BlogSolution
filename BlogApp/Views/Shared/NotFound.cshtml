@{
    ViewData["Title"] = "Страница не найдена";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-container">
                <div class="error-icon">
                    <i class="fas fa-exclamation-triangle fa-5x text-warning"></i>
                </div>
                <h1 class="error-title mt-4">404 - Страница не найдена</h1>
                <p class="error-message">
                    Запрашиваемая страница не существует или была перемещена.
                </p>
                <div class="error-actions mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-home"></i> На главную
                    </a>
                    <a href="javascript:history.back()" class="btn btn-secondary ml-2">
                        <i class="fas fa-arrow-left"></i> Назад
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-info ml-2">
                        <i class="fas fa-envelope"></i> Сообщить о проблеме
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-container {
        padding: 40px 0;
    }

    .error-icon {
        margin-bottom: 20px;
    }

    .error-title {
        font-size: 2.5rem;
        margin-bottom: 20px;
        color: #ffc107;
    }

    .error-message {
        font-size: 1.2rem;
        color: #6c757d;
        margin-bottom: 30px;
    }
</style>
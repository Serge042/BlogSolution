@model BlogApp.Data.Entities.Tag

@{
    ViewData["Title"] = "Тег: " + Model.Name;
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h3>Тег: @Model.Name</h3>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-12">
                        <h4>Информация о теге</h4>
                        <p><strong>Название тега:</strong> <span class="badge badge-info">@Model.Name</span></p>
                        <p><strong>Количество статей с этим тегом:</strong> @(Model.PostTags?.Count ?? 0)</p>
                    </div>
                </div>

                @if (Model.PostTags != null && Model.PostTags.Any())
                {
                    <div class="mt-4">
                        <h4>Статьи с этим тегом</h4>
                        <div class="list-group">
                            @foreach (var postTag in Model.PostTags.Take(10))
                            {
                                <a asp-controller="Posts" asp-action="Details" asp-route-id="@postTag.PostId"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@postTag.Post.Title</h6>
                                        <small>@postTag.Post.CreatedAt.ToString("dd.MM.yyyy")</small>
                                    </div>
                                    <p class="mb-1">@(postTag.Post.Summary.Length > 100 ? postTag.Post.Summary.Substring(0, 100) + "..." : postTag.Post.Summary)</p>
                                    <small>Автор: @postTag.Post.User.Username</small>
                                </a>
                            }
                        </div>
                        @if (Model.PostTags.Count > 10)
                        {
                            <div class="mt-3 text-center">
                                <a href="#" class="btn btn-outline-info">Показать все статьи (@Model.PostTags.Count)</a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        Нет статей с этим тегом.
                    </div>
                }
            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-secondary">Назад к списку тегов</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактировать</a>
            </div>
        </div>
    </div>
</div>